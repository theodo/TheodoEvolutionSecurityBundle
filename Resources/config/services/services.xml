<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <!-- Declare an empty parameter that is set in the extension according to the configuration value -->
        <parameter key="theodo_evolution_security.authentication.listener.class">Theodo\Evolution\Bundle\SecurityBundle\Firewall\EvolutionSecurityListener</parameter>
        <parameter key="theodo_evolution_security.authentication.legacy_entry_point.class">Theodo\Evolution\Bundle\SecurityBundle\EntryPoint\LegacyEntryPoint</parameter>
        <parameter key="theodo_evolution_security.authentication.provider.class">Theodo\Evolution\Bundle\SecurityBundle\Authentication\Provider\AuthenticationProvider</parameter>
        <parameter key="theodo_evolution_security.authentication.token_factory.symfony14.class">Theodo\Evolution\Bundle\SecurityBundle\Authentication\Token\Symfony14TokenFactory</parameter>
        <parameter key="theodo_evolution_security.user_provider.class">Theodo\Evolution\Bundle\SecurityBundle\UserProvider\LegacyUserProvider</parameter>
        <parameter key="theodo_evolution_security.encoder.callable.class">Theodo\Evolution\Bundle\SecurityBundle\Encoder\CallablePasswordEncoder</parameter>
    </parameters>

    <services>
        <service id="theodo_evolution_security.authentication.listener"  class="%theodo_evolution_security.authentication.listener.class%" public="false">
            <argument type="service" id="security.context" />
            <argument type="service" id="security.authentication.manager" />
            <argument type="service" id="theodo_evolution.session.bag_manager_configuration" />
            <argument type="service" id="theodo_evolution_security.user_provider" />
            <argument type="service" id="logger" on-invalid="ignore" />
        </service>

        <service id="theodo_evolution_security.user_provider" class="%theodo_evolution_security.user_provider.class%">
            <argument type="service" id="theodo_evolution_security.legacy_user_repository" />
            <argument type="service" id="theodo_evolution_security.transformer.legacy_user"/>
        </service>

        <service id="theodo_evolution_security.authentication.provider" class="%theodo_evolution_security.authentication.provider.class%">
            <argument type="service" id="theodo_evolution_security.user_provider" />
        </service>

        <service id="theodo_evolution_security.encoder.callable" class="%theodo_evolution_security.encoder.callable.class%">
            <argument type="string">%theodo_evolution_security.encoder.algorithm%</argument>
        </service>

        <service id="theodo_evolution_security.authentication.legacy_entry_point" class="%theodo_evolution_security.authentication.legacy_entry_point.class%" public="false">
            <argument type="string" />
            <argument type="service" id="session" />
        </service>
    </services>
</container>
